{
  "name": "trainer-finder-api",
  "version": "1.0.0",
  "description": "Backend API for TrainerFinder application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc --noEmitOnError false",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "dev:env": "./scripts/set-env.sh development",
    "staging:env": "./scripts/set-env.sh staging",
    "prod:env": "./scripts/set-env.sh production",
    "dev:up": "yarn dev:env && docker compose up",
    "dev:up:build": "yarn dev:env && docker compose up --build",
    "dev:down": "docker compose down",
    "staging:up": "yarn staging:env && docker compose -f docker-compose.staging.yml up",
    "staging:up:build": "yarn staging:env && docker compose -f docker-compose.staging.yml up --build",
    "staging:down": "docker compose -f docker-compose.staging.yml down",
    "prod:up": "yarn prod:env && docker compose -f docker-compose.prod.yml up",
    "prod:up:build": "yarn prod:env && docker compose -f docker-compose.prod.yml up --build",
    "prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:prune": "docker system prune -af",
    "docker:clean": "yarn docker:prune && docker volume prune -f"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.10.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
